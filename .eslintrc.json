// project/.eslintrc.json
{
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "extends": ["standard", "plugin:prettier/recommended"],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
      "prettier/prettier": "error",
      "no-console": "error",
      "no-unused-vars": "off"
    }
  }